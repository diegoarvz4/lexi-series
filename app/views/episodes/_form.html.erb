<div class='form-container'>
  <%= form_for(@episode) do |f| %>
  <% if  @episode && @episode.errors.any? %>
    <div>
      <% @episode.errors.full_messages.each do |error|%>
        <hr>
        <h4> <%= error[0..12] %> </h4>
        <hr>
      <% end %>
    </div>
  <% end %>
    <div class="field">
      <h1><%= @series.name %></h1>
      <%= f.hidden_field :series_id, :value => @series.id %>

      <div class="form-group">
        <%= f.label :number, "Episode #" %>
        <%= f.number_field :number, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :resume %>
        <%= f.text_area :resume, class: 'form-control'%>
      </div>
    <%= f.submit "Submit Episode", class: 'btn btn-default form-button'%>
  <%end%>
</div>