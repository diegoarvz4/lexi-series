 <h1>
  <%= link_to @character.name, @character %> y <%= link_to @related.name, @related %> 
</h1>
<hr>
 <div class="episodes-series-container">
  <%= image_tag @character.series.picture.url, class: 'episodes-series-image ' if @character.series.picture? %>
  <h5 class="episodes-series"><%= link_to @character.series.name, @character.series %></h5> 
  <hr>
  <span class="series-container-title series-show-edit">
      <%= link_to "#{image_tag('edit.svg', class:'relationships-add')}".html_safe, edit_relationship_path(@relationship.id) %>
  </span>
</div>
<hr>
<div class="relationships-container">
  <div class="relationships-container-character">
    <%= image_tag @character.picture.url if @character.picture? %>
  </div>
  <div class="relationships-container-related">
    <%= image_tag @related.picture.url if @related.picture? %>
  </div>
</div>
<hr>
<div class="relationships-description">
  <p>
    <%= @relationship.description %>
  </p>
</div>
<hr>


