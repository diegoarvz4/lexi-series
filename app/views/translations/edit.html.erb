<div class='form-container'>
  <h1><%= @translation.episode.series.name %></h1>
  <h1>Editar Episodio #<%= @translation.episode.number %></h1>
  <%= form_for(@translation) do |f| %>
  <% if  @translation && @translation.errors.any? %>
    <div>
      <% @translation.errors.full_messages.each do |error|%>
        <hr>
        <div class="alert alert-danger"> <%= error %> </div>
        <hr>
      <% end %>
    </div>
  <% end %>
    <div class="field">

      <div class="form-group">
        <%= f.label :translator, "Traductor" %>
        <%= f.select :translator_id, workers_options, include_blank: true %>
      </div>

      <div class="form-group">
        <%= f.label :src_lang, "Source Lang" %>
        <%= f.select :src_lang, lang_options, include_blank: true %>
      </div>

      <div class="form-group">
        <%= f.label :dst_lang, "Destination Lang" %>
        <%= f.select :dst_lang, lang_options, include_blank: true %>
      </div>

      <div class="form-group">
        <%= f.label :runtime, "Runtime Minutes" %>
        <%= f.number_field :runtime, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :duedate, "Fecha Entrega" %>
        <%= f.date_field :duedate, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :status, "Estado" %>
        <%= f.select :status, status_options, include_blank: true %>
      </div>

      <div class="form-group">
        <%= f.label :files_url, "URL Archvios" %>
        <%= f.text_field :files_url, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :video_url, "URL Video" %>
        <%= f.text_field :video_url, class: 'form-control'%>
      </div>
