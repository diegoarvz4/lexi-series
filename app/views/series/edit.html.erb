<div class='form-container'>
  <%= form_for @series do |f| %>
  <% if  @series && @series.errors.any? %>
    <div>
      <% @series.errors.full_messages.each do |error|%>
        <div class="alert alert-danger"> <%= error %> </div>
      <% end %>
    </div>
  <% end %>
    <div class="field">

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', value: @series.name%>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', value: @series.description%>
      </div>

      <div class="form-group">
        <%= f.label :instructions %>
        <%= f.text_area :instructions, class: 'form-control', value: @series.instructions%>
      </div>

      <hr>
      <%= image_tag @series.picture.url, class:'picture img-responsive img-rounded' if @series.picture? %>
      <hr>
      <div class="form-group">
        <div class="input-group">
          <label class="input-group-btn">
              <span class="btn btn-primary">
                  Browse&hellip; <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', style: 'display: none;' %>
              </span>
          </label>
          <input type="text" class="form-control" readonly>
        </div>
      </div>
    </div>
    <!--%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %-->
    <%= f.submit "Update Series", class: 'btn btn-default form-button'%>
  <%end%>
</div>

<%= javascript_include_tag "img-loader" %>